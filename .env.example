# ========================================
# PolicyGraphRAG 环境配置文件
# ========================================

# 工作目录配置
working_dir = "resource"  # 存储索引、缓存等文件的工作目录路径

# 设备配置 - 指定模型运行的硬件设备
# 优先级：mps (Apple Silicon) cuda (NVIDIA GPU)  cpu (中央处理器)
device = "mps" or "cuda" or "cpu"

# 嵌入模型配置
embedding_type = "huggingface" or "openai api" or "custom api"  # 嵌入模型类型：本地HuggingFace模型、OpenAI API或自定义API
embedding_model = "bge-small-zh-v1.5"  # 本地HuggingFace嵌入模型名称（如bge-small-zh-v1.5、bge-m3等）
embedding_api_key = "sk-"  # 嵌入服务API密钥（如使用OpenAI API或自定义API时需要）
embedding_base_url = "https://"  # 嵌入服务基础URL（如使用OpenAI API或自定义API时需要）
embedding_model_name = "text-embedding-v3"  # API嵌入模型名称（如text-embedding-3-small、text-embedding-v3等）

# 大语言模型(LLM)配置
llm_model_name = "qwen3"  # 使用的LLM模型名称（如qwen3、gpt-4、claude-3等）
llm_api_key = "sk-"  # LLM服务API密钥
llm_base_url = "https://"  # LLM服务基础URL


